{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@sferadev/tsconfig/base.json",
	"compilerOptions": {
		"paths": {
			"~/*": ["./src/*"]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "@kubb/react-fabric",
		"rootDir": "."
	},
	// Exclude the generated MCP files because zod v3 uses lazy loading which is very slow to compile
	"exclude": ["./src/generated/mcp.ts", "./src/generated/schemas-mcp.ts", "./src/mcp.ts"]
}
