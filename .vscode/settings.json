{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
    "**/out": true,
    "**/dist": true,
    "**/*.vsix": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    ".reference": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.hg/store/**": true,
    ".reference/**": true,
    ".logs/**": true
  },
  // Enable file logging for Vercel AI Gateway when using debug/trace level
  // Logs will be written to .logs/ directory (gitignored)
  "vercelAiGateway.logging.fileDirectory": ".logs",
  "vercelAiGateway.logging.level": "info",
  "vercelAiGateway.logging.capture": ["requests", "suspicious", "events"]
}
