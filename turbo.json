{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"build": {
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**", "out/**"],
			"dependsOn": ["^build", "^generate", "generate"]
		},
		"@sferadev/openapi-website#build": {
			"dependsOn": ["vercel-api-js#build"],
			"env": [
				"AUTH_SECRET",
				"DATABASE_URL",
				"AUTH_VERCEL_ID",
				"AUTH_VERCEL_SECRET",
				"AUTH_VERCEL_APP_NAME",
				"AUTH_VERCEL_REDIRECT_URI",
				"MCPAUTH_ALLOWED_ORIGIN",
				"MCPAUTH_SECRET",
				"MCPAUTH_PRIVATE_KEY",
				"NEXT_PUBLIC_BASE_URL"
			]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"generate": {
			"inputs": ["kubb.config.ts", "openapi-codegen.config.ts"],
			"outputs": [
				"src/generated/**",
				"src/api/**",
				"src/account/**",
				"src/admin/**",
				"src/meeting/**"
			],
			"dependsOn": ["^build"]
		},
		"tsc": {},
		"test": {},
		"is-tree-shakable": {
			"dependsOn": ["build"]
		},
		"clean": {
			"cache": false
		}
	}
}
